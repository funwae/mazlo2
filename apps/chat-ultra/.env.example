# ============================================
# DEV AUTH BYPASS
# ============================================
# Set to 'true' to bypass authentication in development
# When enabled, the app will automatically use a demo user
# IMPORTANT: Set to 'false' in production!
DEV_BYPASS_AUTH=true
DEMO_USER_ID=00000000-0000-0000-0000-000000000001
DEMO_USER_EMAIL=demo@glyphd.com

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
# Optional: Service role key for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# Z.AI (GLM) - Mazlo AI Backend
# ============================================
ZAI_API_KEY=your_zai_api_key_here

# ============================================
# DATABASE (Optional - if using direct connection)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# OPENAI (Optional - if using OpenAI)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

